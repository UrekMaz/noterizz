  }

  .box {
    font-family: proxima-nova, sans-serif;
    font-size: 15px;
    line-height: 24px;
    color: #eeeeee;
    width: 350px;
    padding: 50px;
    padding-top: 30px;
    border-radius: 5px;
    background-color: #27293d;
    transition: all 0.3s ease;
    cursor: pointer;
    margin: 20px;
  }

  .box:hover {
    transform: scale(1.1);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
  }

  .box h2 {
    color: #fff;
    margin-top: -7px;
    text-align: left;
  }

  .box p {
    font-family: proxima-nova, sans-serif;
    line-height: 24px;
    cursor: pointer;
    margin-top: 1px;
    color: #f3f3f3;
    margin-bottom: 20px;
    text-align: left;
    font-size: 18px;
  }

  .btn {
    display: inline-block;
    padding: 10px 48px;
    margin-top: 11px;
    background-color: #3336c9;
    color: #ffffff;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
               }

               .btn1{
